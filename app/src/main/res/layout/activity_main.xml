    <Button
        android:id="@+id/b7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@+id/b4"
        tools:layout_editor_absoluteX="168dp" />

    <Button
        android:id="@+id/b8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@+id/b5"
